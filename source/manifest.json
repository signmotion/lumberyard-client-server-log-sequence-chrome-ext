{
  "name": "__MSG_extName__",
  "short_name": "__MSG_extNameShort__",
  "description": "__MSG_extDescription__",
  "version": "0.1.1",
  "default_locale": "en",
  "manifest_version": 2,

  "permissions": [
    "tabs",
    "file://*",
    "storage"
  ],

  "icons": {
    "128": "icon128.png",
    "64":  "icon64.png",
    "32":  "icon32.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "128": "icon128.png",
      "64":  "icon64.png",
      "32":  "icon32.png"
    },
    "default_popup": "popup.html",
    "default_title": "__MSG_extNameShort__"
  },

  "content_scripts": [{
    "matches": ["file://*/*.log"],
    "js": ["content.js"]
  }],

  "incognito": "split",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'"
}
